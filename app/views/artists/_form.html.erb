<%= form_with(model: artist) do |form| %>
  <% if artist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(artist.errors.count, "error") %> prohibited this artist from being saved:</h2>

      <ul>
        <% artist.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :genre %>
    <%= form.select :genre, @genre_choices %>
  </div>

  <div class="field">
    <%= form.label :subgenre1 %>
    <%= form.select :subgenre1, @subgenre_choices %>
  </div>

  <div class="field">
    <%= form.label :subgenre2 %>
    <%= form.select :subgenre2, @subgenre_choices %>
  </div>

  <div class="field">
    <%= form.label :subgenre3 %>
    <%= form.select :subgenre3, @subgenre_choices %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= form.select :priority, @priority_choices, selected: 'Current' %>
  </div>

  <div class="field">
    <%= form.label :pop_list %>
    <%= form.select :pop_list, @status_choices, selected: 'Active' %>
  </div>

  <div class="field">
    <%= form.label :greatest_list %>
    <%= form.select :greatest_list, @status_choices, selected: 'Unexplored' %>
  </div>

  <div class="field">
    <%= form.label :album %>
    <%= form.select :album, @status_choices, selected: 'Unexplored' %>
  </div>

  <div class="field">
    <%= form.label :current_album %>
    <%= form.text_field :current_album %>
  </div>

  <div class="field">
    <%= form.label :current_song %>
    <%= form.text_field :current_song %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
