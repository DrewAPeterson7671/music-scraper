<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Genre</th>
      <th>Subgenre1</th>
      <th>Subgenre2</th>
      <th>Subgenre3</th>
      <th>Priority</th>
      <th>Pop list</th>
      <th>Greatest list</th>
      <th>Album</th>
      <th>Current Album</th>
      <th>Current Song</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
        <td><%= artist.genre %></td>
        <td><%= artist.subgenre1 %></td>
        <td><%= artist.subgenre2 %></td>
        <td><%= artist.subgenre3 %></td>
        <td><%= artist.priority %></td>
        <td><%= artist.pop_list %></td>
        <td><%= artist.greatest_list %></td>
        <td><%= artist.album %></td>
        <td><%= artist.current_album %></td>
        <td><%= artist.current_song %></td>
        <td><%= link_to 'Show', artist %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

